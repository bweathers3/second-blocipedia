

%h1
 = markdown(@wiki.title)
 %small
  - if @wiki.private == true
   Private Wiki
  - else
   Public Wiki

.row
 .col-md-8
  %p= markdown(@wiki.body)
 .col-md-4
  = link_to "Edit Your Wiki", edit_wiki_path(@wiki), class: 'btn btn-success'
  = link_to "Delete Your Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete your wiki?'}
